<h1>Bulk Discounts</h1>

<table table-striped>
  <thead>
    <tr>
      <th>Discount Name</th>
      <th>Percentage Off</th>
      <th>Quantity Threshold</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @merchant.bulk_discounts.each do |bulk_discount| %>
      <tr id="bulk_discount-<%= bulk_discount.id %>">
        <td><%= bulk_discount.name %></td>
        <td><%= bulk_discount.percentage %></td>
        <td><%= bulk_discount.threshold %></td>
        <td><%= link_to 'Show', merchant_bulk_discount_path(@merchant, bulk_discount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
